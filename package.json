{
  "name": "aion_ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "deploy-dev": "hardhat run scripts/deploy-dev.cjs --network hardhat",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "dev-init": "docker compose up -d && sleep 30 && hardhat run scripts/deploy-dev-full.cjs --network localhost",
    "dev-up": "docker compose up -d",
    "dev-down": "docker compose down",
    "dev-clean": "docker compose down && sudo rm -rf data && graph clean && hardhat clean",
    "generate": "hardhat compile && wagmi generate && graph codegen",
    "codegen": "graph codegen",
    "graph-build": "graph build",
    "graph-deploy": "graph deploy --node https://api.studio.thegraph.com/deploy/ AionCoreSubgraph",
    "create-local": "graph create --node http://localhost:8020/ AionCoreSubgraph",
    "remove-local": "graph remove --node http://localhost:8020/ AionCoreSubgraph",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 AionCoreSubgraph",
    "create-test": "graph create AionCoreSubgraph --node http://localhost:8020/",
    "deploy-test": "graph deploy AionCoreSubgraph --version-label v0.0.1 --ipfs http://localhost:5001 --node http://localhost:8020/",
    "test": "docker compose up -d && sleep 30 && hardhat test --network localhost && docker compose down",
    "test:chrome": "npx playwright test --headed --project=chromium",
    "test:firefox": "npx playwright test --headed --project=firefox",
    "test:safari": "npx playwright test --headed --project=webkit",
    "graph-test": "graph test"
  },
  "dependencies": {
    "@apollo/client": "^3.11.4",
    "@rainbow-me/rainbowkit": "^2.1.7",
    "@tanstack/react-query": "^5.51.21",
    "@types/lodash.merge": "^4.6.9",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@web3modal/wagmi": "^5.0.11",
    "axios": "^1.7.7",
    "ethers": "^6.13.4",
    "graphql": "^16.9.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-loader-spinner": "^6.1.6",
    "viem": "^2.18.7",
    "wagmi": "^2.12.2"
  },
  "devDependencies": {
    "@chainlink/contracts": "^1.2.0",
    "@graphprotocol/client-cli": "^3.0.6",
    "@graphprotocol/graph-cli": "0.71.2",
    "@graphprotocol/graph-ts": "0.35.1",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.1.0",
    "@playwright/test": "^1.46.1",
    "@types/node": "^22.5.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@wagmi/cli": "^2.1.15",
    "apollo-fetch": "^0.7.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "hardhat": "^2.22.15",
    "hardhat-dependency-compiler": "^1.2.1",
    "typescript": "^5.2.2",
    "vite": "^5.3.4"
  }
}
