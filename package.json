{
  "name": "aion_ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "deploy-dev": "hardhat run scripts/deploy-dev.cjs --network hardhat",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "graph:node": "cd subgraph/local-node && docker-compose up",
    "dev-up": "docker compose up -d && sleep 30 && hardhat run scripts/deploy-dev.cjs --network localhost",
    "dev-down": "docker compose down",
    "dev-clean": "docker compose down && sudo rm -rf data"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.51.21",
    "@web3modal/wagmi": "^5.0.11",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "viem": "^2.18.7",
    "wagmi": "^2.12.2"
  },
  "devDependencies": {
    "@chainlink/contracts": "^1.2.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@wagmi/cli": "^2.1.15",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "hardhat": "^2.22.8",
    "typescript": "^5.2.2",
    "vite": "^5.3.4"
  }
}
